{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true
    },
    "extends": [
        "airbnb-base", "plugin:node/recommended"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "rules": {
        "spaced-comment": "off",
        "semi": ["error", "always"],
        "no-console": "warn",
        "no-unused-vars": ["error", { "argsIgnorePattern": "req|res|next|val" }]
    }
}