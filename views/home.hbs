
{{> header}}

<div class="container p-3">
    
    <table class="table table-hover  table-dark shadow">
    <caption>Football-team count: {{getLength teams}}</caption>  
      <thead class="bg-info">
        <tr>
          <th scope="col">#</th>
          <th scope="col">Team Name</th>
          <th scope="col">Country</th>
          <th scope="col">Action</th>
        </tr>
      </thead>
      <tbody>
        {{#if teams }}
          {{#each teams}}
        <tr>
          <th scope="row"> {{plusOne @index}} </th>
          <td>
            <img class="team-crest" src="{{this.crestUrl}}"
              alt="team-crest">
            {{this.shortName}}
          </td>
          <td>{{this.area.name}}</td>
          <td>   
            <!---- File plus icon ---->
            <a href="/teams/team-details/{{this.id}}" data-toggle="tooltip" data-placement="bottom" title="See details..." class="text-white">
              <svg class="bi bi-file-earmark-plus file-plus-icon" width="1.2em" height="1.2em" viewBox="0 0 16 16"
                fill="currentColor" xmlns="http://www.w3.org/2000/svg focusable=" false"">
                <path
                  d="M9 1H4a2 2 0 0 0-2 2v10a2 2 0 0 0 2 2h5v-1H4a1 1 0 0 1-1-1V3a1 1 0 0 1 1-1h5v2.5A1.5 1.5 0 0 0 10.5 6H13v2h1V6L9 1z" />
                <path fill-rule="evenodd"
                  d="M13.5 10a.5.5 0 0 1 .5.5v2a.5.5 0 0 1-.5.5h-2a.5.5 0 0 1 0-1H13v-1.5a.5.5 0 0 1 .5-.5z" />
                <path fill-rule="evenodd" d="M13 12.5a.5.5 0 0 1 .5-.5h2a.5.5 0 0 1 0 1H14v1.5a.5.5 0 0 1-1 0v-2z" />
              </svg>
            </a>
            <!---- Pencil icon ---->
            <a href="/teams/settings/{{this.id}}" data-toggle="tooltip" data-placement="bottom" title="Edit team" class="text-white">
              <svg class="bi bi-pencil ml-1 pencil-icon" width="1.2em" height="1.2em" viewBox="0 0 16 16"
                fill="currentColor" xmlns="http://www.w3.org/2000/svg" focusable="false">
                <path fill-rule="evenodd"
                  d="M11.293 1.293a1 1 0 0 1 1.414 0l2 2a1 1 0 0 1 0 1.414l-9 9a1 1 0 0 1-.39.242l-3 1a1 1 0 0 1-1.266-1.265l1-3a1 1 0 0 1 .242-.391l9-9zM12 2l2 2-9 9-3 1 1-3 9-9z" />
                <path fill-rule="evenodd"
                  d="M12.146 6.354l-2.5-2.5.708-.708 2.5 2.5-.707.708zM3 10v.5a.5.5 0 0 0 .5.5H4v.5a.5.5 0 0 0 .5.5H5v.5a.5.5 0 0 0 .5.5H6v-1.5a.5.5 0 0 0-.5-.5H5v-.5a.5.5 0 0 0-.5-.5H3z" />
              </svg>
            </a>
            <!---- Trash icon ---->
            <a href="/teams/team-details/{{this.id}}"  data-toggle="tooltip" data-placement="bottom" title="Delete team" class="text-white delete-link">
              <svg class="bi bi-trash ml-1 trash-icon" width="1.2em" height="1.2em" viewBox="0 0 16 16" data-url="/teams/team-details/{{this.id}}"
                fill="currentColor" xmlns="http://www.w3.org/2000/svg" focusable="false">
                <path
                  d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6z" />
                <path fill-rule="evenodd"
                  d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1zM4.118 4L4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118zM2.5 3V2h11v1h-11z" />
              </svg>
            </a>
          </td>
        </tr>

        {{/each}}
      {{/if}}
        
      </tbody>
      
    </table>

    <button type="button" class="btn btn-info text-uppercase shadow" id="add-team-btn">
      <a class="text-white" href="/teams/new-team">
        Add Team
      </a>
    </button>
  </div>

  
  
  {{> deleteModal }}
{{> footer}}