
{{> header}}

<div class="container p-3">
  <form action="/teams/settings/{{teamData.id}}" method="post" enctype="multipart/form-data">
    <div class="form-group">
      <label for="crest-img">Upload crest image</label> 
      <input type="file" class="form-control-file" name="crest-img" id="crest-img" value="{{teamData.crestUrl}}">
      {{#if msg}}
      <div>{{msg}}</div>
      {{/if}}
    </div>
    <div class="form-group">
      <label for="name">Name</label>
      <input type="text" class="form-control input-field" name="name" id="name" value="{{teamData.name}}">
    </div>
    <div class="form-group">
      <label for="shortName">Short name</label>
      <input type="text" class="form-control input-field" name="shortName" id="shortName" value="{{teamData.shortName}}">
    </div>
    <div class="form-group">
      <label for="tla">TLA</label>
      <input type="text" class="form-control input-field" name="tla" id="tla" value="{{teamData.tla}}">
    </div>
    <div class="form-group">
      <label for="address">Address</label>
      <input type="text" class="form-control input-field" name="address" id="address" value="{{teamData.address}}">
    </div>
    <div class="form-group">
      <label for="phone">Phone number</label>
      <input type="tel" class="form-control input-field" name="phone" id="phone" value="{{teamData.phone}}">
    </div>
    <div class="form-group">
      <label for="website">Website</label>
      <input type="url" class="form-control input-field" name="website" id="website" value="{{teamData.website}}">
    </div>
    <div class="form-group">
      <label for="email">Email</label>
      <input type="email" class="form-control input-field" name="email" id="email" value="{{teamData.email}}">
    </div>
    <div class="form-group">
      <label for="founded">Founded</label>
      <input type="number" class="form-control input-field" name="founded" id="founded" value="{{teamData.founded}}">
    </div>
    <div class="form-group">
      <label for="clubColors">Club colors</label>
      <input type="text" class="form-control input-field" name="clubColors" id="clubColors" value="{{teamData.clubColors}}">
    </div>
    <div class="form-group">
      <label for="venue">Venue</label>
      <input type="text" class="form-control input-field" name="venue" id="venue" value="{{teamData.venue}}">
    </div>
    <div class="form-group">
      <label for="clubCountry">Club country</label>
      <input type="text" class="form-control input-field" name="clubCountry" id="clubCountry" value="{{teamData.area.name}}">
    </div>
    <button type="submit" class="btn btn-info edit-team-btn">Save settings</button>
  </form>
</div>


{{> footer}}